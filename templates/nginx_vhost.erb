location /repositories {
    root /var/packages;
    autoindex on;
    rewrite ^/repositories/?(.*)$ /$1 break;
    index off;

    location ~ /(.*)/conf {
        deny all;
    }

    location ~ /(.*)/db {
        deny all;
    }
}
